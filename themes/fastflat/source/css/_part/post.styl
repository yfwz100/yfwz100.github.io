.post.wrap
  .post-heading
    text-align center
    margin-bottom 1em

  .post-meta
    text-align center
    background-color #efefef
    border-radius 0.5em
    padding 0.5em
    margin 0.5em 0

    .author
      a
        text-decoration none

    .tag
      background-color orange
      border-radius 0.3em
      padding 0 0.3em
      margin-left 0.2em
      text-decoration none
      color white

  .post-body
    p
      text-indent 2em
      font-family "Kaiti SC", "Songti SC", "宋体", "Times", sans-serif
