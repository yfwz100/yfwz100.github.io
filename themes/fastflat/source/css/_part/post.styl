.post.wrap
  .post-heading
    text-align center
    margin-top 1.8em
    margin-bottom 0

    h1
      font-size 1.8em
      font-weight bolder
      margin 0

  .post-meta
    text-align right
    border-radius 0.5em
    padding 0.5em 19px
    margin 0.5em 0

    .author
      a
        text-decoration none

    .tag
      background-color orange
      border-radius 0.3em
      padding 0 0.3em
      margin-left 0.2em
      text-decoration none
      color white
      transition 0.5s

      &hover
        background-color #ffcc66

  .post-body
    margin-bottom 3em
    padding 0 19px
    
    > p
      text-align justify
  
    blockquote
      background-color #f1f1f1
      border-left 0.5em solid #ccc
      margin 0
      padding 0em 0 0 1em

    a
      color #4183C4
    
    h1, h2, h3, h4, h5, h6
      position relative
      margin-top 1rem
      margin-bottom 1rem
      font-weight bold
      line-height 1.4
      cursor text
    
    h1 a.anchor, h2 a.anchor, h3 a.anchor, h4 a.anchor, h5 a.anchor, h6 a.anchor,
    h1:hover a.anchor, h2:hover a.anchor, h3:hover a.anchor, h4:hover a.anchor, h5:hover a.anchor, h6:hover a.anchor
      text-decoration none
      padding-right 0.2em
    h1 tt, h1 code
      font-size inherit
    h2 tt, h2 code
      font-size inherit
    h3 tt, h3 code
      font-size inherit
    h4 tt, h4 code
      font-size inherit
    h5 tt, h5 code
      font-size inherit
    h6 tt, h6 code
      font-size inherit

    h1
      padding-bottom .3em
      font-size 1.3em
      line-height 1.2
      border-bottom 1px solid #eee

    h2
      padding-bottom .3em
      font-size 1.2em
      line-height 1.225
      border-bottom 1px solid #eee

    h3
      font-size 1.1em
      line-height 1.43

    h4
      font-size 1.05em

    h5
      font-size 1em

    h6
      font-size 1em
      color #777

    p, blockquote, ul, ol, dl, table
      margin 0.8em 0

    li>ol, li>ul
      margin 0 0

    hr
      height 4px
      padding 0
      margin 16px 0
      background-color #e7e7e7
      border 0 none
      overflow hidden
      box-sizing content-box
      border-bottom 1px solid #ddd

    > h2:first-child
      margin-top 0
      padding-top 0
    
    > h1:first-child
      margin-top 0
      padding-top 0

    > h1:first-child + h2
      margin-top 0
      padding-top 0

    > h3:first-child, > h4:first-child, > h5:first-child, > h6:first-child
      margin-top 0
      padding-top 0

    a:first-child h1,
    a:first-child h2,
    a:first-child h3,
    a:first-child h4,
    a:first-child h5,
    a:first-child h6
      margin-top 0
      padding-top 0

    h1 p,
    h2 p,
    h3 p,
    h4 p,
    h5 p,
    h6 p
      margin-top 0

    li p.first
      display inline-block

    ul, ol
      padding-left 30px

    ul:first-child, ol:first-child
      margin-top 0

    ul:last-child, ol:last-child
      margin-bottom 0

    blockquote
      border-left 4px solid #dddddd
      padding 0 15px
      color #777777

    blockquote blockquote
      padding-right 0

    table
      width 100%
      padding 0
      margin 0
      border-collapse collapse

      tr
        border-top 1px solid #acacac
        margin 0
        padding 0

        th
          font-weight bold
          border 1px solid #acacac
          text-align left
          margin 0
          padding 6px 13px
          background #acacac
          color #fff

        td
          border 1px solid #acacac
          text-align left
          margin 0
          padding 6px 13px
        
        th:first-child,
        td:first-child
          margin-top 0
        
        th:last-child,
        td:last-child
          margin-bottom 0

      tr:nth-child(2n)
        background-color #f8f8f8
