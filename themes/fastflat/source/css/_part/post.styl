.post.wrap
  .post-heading
    text-align center
    margin-bottom 1em

  .post-meta
    text-align center
    border-bottom 1px solid #efefef
    border-radius 0.5em
    padding 0.5em
    margin 0.5em 0

    .author
      a
        text-decoration none

    .tag
      background-color orange
      border-radius 0.3em
      padding 0 0.3em
      margin-left 0.2em
      text-decoration none
      color white
      transition 0.5s

      &:hover
        background-color #ffcc66

  .post-body
    p, li
      font-family "Kaiti SC", "Songti SC", "宋体", "Times", sans-serif
    p
      text-indent 2em
    p:only-child
      text-indent 0
    blockquote
      background-color #f1f1f1
      border-left 0.5em solid #ccc
      margin 0
      padding 0em 0 0 1em
