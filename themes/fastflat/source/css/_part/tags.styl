.tag-list
  text-align center
  padding 1em 0
  margin auto
  width 50%

  .tag-link
    display inline-block
    background-color skyblue
    color white
    border-radius 0.3em
    padding 0.4em
    margin 0.3em
    text-decoration none

    .tag-count
      display inline-block
      border-radius 50%
      margin-left 0.2em
      width 1.4em
      height 1.4em
      background-color orange
      color white

  &:after
    content ' '
    display block
    clear both
