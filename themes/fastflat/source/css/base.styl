html, body
  margin 0
  padding 0
  width 100%
  height 100%
  position relative

a
  color #0e7cf1
  transition 0.1s

  &:hover
    color #0e88f1
    text-shadow: 0 0 0.5em #fff      

body
  background-color #efefef
  font 300 1em PingFang SC,Lantinghei SC,Microsoft Yahei,Hiragino Sans GB,Microsoft Sans Serif,WenQuanYi Micro Hei,sans
  text-rendering optimizelegibility

.page
  margin auto
  max-width 800px

.page
  .page-heading
    text-align center
    font-size 1.2em
    padding-top 1em

.wrap
  background-color white
  padding 1em 0
  min-height 3em

header
  background-color #eee
  font-size 1.1em
  padding-top 0.8em
  position relative
  border-bottom: 1px solid #ccc
  z-index 100
  height: 4em

  .page
    position: relative
    width: 100%
    height: 100%

  nav
    position absolute
    bottom: -1px
    padding 0
    width: 100%

    &:after
      content ' '
      display block
      clear both

    ul
      padding 0
      margin 0

      &.brand
        float left

        a.on:after
          width: 1em
          height: 1em

      &.blog
        float left
        color #aaa

        &:before
          content '{'
          display inline-block
          float left
          padding 0.5em 0
          line-height 2

        &:after
          content '}'
          display inline-block
          float right
          padding 0.5em 0
          line-height 2

      &.brand, &.blog
        li
          &:hover
            a:after
              width: 1em
              height: 1em

            &.on
              color #0e7cf1
              font-weight bolder

              &:hover
                color #87ceeb

              &:after
                width: 1em
                height: 1em

      &.social
        float: right

        li a
          color #acacac

          &:hover
            color #888

          &.fa-git:hover
            color green
          
          &.fa-github:hover
            color #222

          &.fa-weibo:hover
            color red

      li // all lis
        display inline-block
        position relative
        padding 0.5em
        line-height 2

        a
          text-decoration none
          color #0e7cf1
          transition 1s

          &:after
            content ' '
            width 0em
            height 0em
            position absolute
            left 50%
            bottom -0.5em
            transform: translate(-50%,0) rotate(45deg)
            border-top 1px solid #ccc
            border-left 1px solid #ccc
            background-color white
            transition: 0.1s

          &:hover
            color #87ceeb

footer
  position relative
  background-color #eee
  color #acacac
  border-top: 1px solid #ccc
  z-index: 100
  height: 5em

  .page
    position: relative
    padding-top: 0.5em

  address.author
    font-style normal
    position relative
    display inline-block
    padding-top 0.5em

  a
    color #aaa

    &:hover
      color #888

  .rss
    position absolute
    right 0
    bottom 0

    a
      text-decoration none
      font-size 2.5em

